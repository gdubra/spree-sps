 appearance: none;
 -moz-appearance: none; /* Firefox */
 -webkit-appearance: none;
 border: 1px solid #cccccc;
 height: 28px;
 margin-top: 8px;
 padding: 5px;
 border-radius: 4px;
 width: 100%;
