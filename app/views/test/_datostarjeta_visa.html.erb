}



.red-gradient {
    background: -webkit-gradient(linear,center top, center bottom, from(#ec3023), to(#b70b03));
    background: -moz-linear-gradient(to bottom, #ec3023, #b70b03);
    background: -o-linear-gradient(to bottom, #ec3023, #b70b03);
    background: linear-gradient(to bottom, #ec3023, #b70b03);
}

body {
  background: #f7f7f7;
}

a {
  text-decoration: none;
}

table a {
  float: left;
}

#DatosTarjetaForm {
  overflow: hidden;
  padding: 3%;
}

#DatosTarjetaForm table {
  margin-top: 423px;
}

