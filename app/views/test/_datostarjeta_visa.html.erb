.display-none {
  display: none;
}

.button {
  font-family: 'GothamMedium';
  background: none repeat scroll 0 0 transparent;
  border: medium none;
  color: #FFFFFF;
  cursor: pointer;
  float: left;
  font-size: 12px;
  height: 34px;
  padding: 4px;
  text-transform: uppercase;
  width: 139px;
}

.button.submit {
  text-align: left;
}

.red-gradient:hover {
  background: -webkit-gradient(linear,center top, center bottom, from(#b70b03), to(#ec3023));
  background: -moz-linear-gradient(to bottom, #b70b03, #ec3023);
  background: -o-linear-gradient(to bottom, #b70b03, #ec3023);
  background: linear-gradient(to bottom, #b70b03, #ec3023);
}

.button.cancel {
  text-align: right;
}

.hard-gray-gradient:hover{
  background: -webkit-gradient(linear,center top, center bottom, from(#868686), to(#b5b5b5));
  background: -moz-linear-gradient(to top, #b5b5b5, #868686);
  background: -o-linear-gradient(to top, #b5b5b5, #868686);
  background: linear-gradient(to top, #b5b5b5, #868686);
}

.image {
  margin-top: 10px;
}

.default-button {
    border-radius: 8px 20px 20px 8px;
    border: 1px solid #9b9c9c;
    position: relative;
    font-family: 'GothamMedium', Helvetica, Arial, sans-serif;
}
.large-button {
    width: 150px;
    height: 34px;
    float: right;
    margin-left: 10px;
}
.text-style {
    display: block;
    position: absolute;
}

.text-style-xlarge {
    color: #ffffff;
    font-size: 13px;
    top: 7px;
    left: 6px;
}

.text-style-large {
    color: #ffffff;
    font-size: 12px;
    top: 9px;
    left: 6px;
}
.default-circle {
    background: #ffffff;
    border-radius: 50%;
    position: absolute;
    top: 4px;
    right: 4px;
    box-shadow: inset 0px 0px 3px 1px rgba(0,0,0,.7);
    -moz-box-shadow: inset 0px 0px 3px 1px rgba(0,0,0,.7);
    -webkit-box-shadow: inset 0px 0px 3px 1px rgba(0,0,0,.7);
}

.large-circle {
    width: 25px;
    height: 25px;
    font-size: 17px;
}

.large-circle i {
    position: absolute;
    top: 4px;
    left: 9px;
    display: block;
}

.button-left-orientation {
    border-radius: 20px 8px 8px 20px !important;   
}

.circle-left-orientation {
    left: 5px;
