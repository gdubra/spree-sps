<BODY leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">
<div id="container" align="center">
<p>
  <b>
    <font class="texto">Por favor, ingrese los siguientes datos de su tarjeta VISA y haga su pago:</font>
  </b>
</p>
<img src="/assets/test/visa-card-image.png" align="center">
</div>
  <%= form_tag(url_for(:fake_sps_confirmar_visa), {:method=>:post,:id=>'DatosTarjetaForm',:name=>'DatosTarjetaForm',:onSubmit=>"return beforesubmit();"}) do%>
  
    <!-- Iframe Left Column -->
    <div class="iframe-left-column">

      <input type = "hidden" name="MTARJETA" value="4">
  	  <input type = "hidden" name="NOMBRE" value="default">
  	  <input type = "hidden" name="APELLIDO" value="default">
  	  <input type = "hidden" name="TELEFONO" value="000">
      
      
      
      <!-- Titular de la tarjeta -->
      <div class="item">
      <div class="texto">Titular de la Tarjeta:</div>
      <input tabindex="1" name="NOMBREENTARJETA" class="box-style">
  		<div class="textochico">(como aparece en la tarjeta)</div>
      </div>
    
      <!-- Codigo de seguridad -->
      <div class="item">
        <div class="texto">C&oacute;d. de Seguridad: </div>
        <input tabindex="3" type="password"class="box-style" maxLength="4" name="CODSEGURIDAD" size="4" autocomplete="off">
      </div>

      <!-- Tipo de documento -->
      <div class="item">
      <div class="texto reg">Tipo de Documento: </div>
      <SELECT tabindex="5" name="TIPODOC">
        <OPTION value="1" selected>DNI</OPTION>
        <OPTION value="2">CI</OPTION>
        <OPTION value="3">LE</OPTION>
        <OPTION value="4">LC</OPTION>
      </SELECT>
      </div>

      <!-- Fecha de nacimiento -->
      <div class="item">
      <div class="texto">Fecha de Nacimiento: </div>
      <input tabindex="7" class="box-style" maxLength="20" name="FECHANACIMIENTO" size="20">
      <div class="textochico">(En formato <b>DDMMAAAA</b>)</div>
      </div>

      <!-- Calle -->
      <div class="item">
      <div class="texto">Calle: </div>
      <input tabindex="9" class="box-style" maxLength="20" name="CALLE" size="20">
      <div class="textochico">(domicilio de entrega de resumen de tarjeta)</div>
      </div>

      
  
    </div>

    <!-- Iframe Right Column -->
    <div class="iframe-right-column">

      <!-- Numero de tarjeta -->
      <div class="item">
        <div class="texto">N&uacute;mero de Tarjeta:&nbsp; </div>
        <input tabindex="2" class="box-style" maxLength="19" name="NROTARJETA" autocomplete="off">
        <div class="textochico">(sin espacios, ni guiones)</div>
      </div>

      <!-- Fecha de vencimiento -->
      <div class="item">
        <div class="texto">Fecha de Vencimiento: </div>
       <input tabindex="4" class="box-style" maxlength="4" name="VENCTARJETA" autocomplete="off">
        <input type="hidden" name="VENCIMIENTO" size="4">
        <div class="textochico">(en formato <b>MMAA</b>)</div>
      </div>
      
      <!-- Numero de documento -->
      <div class="item">
      <div class="texto">N&uacute;mero de Documento: </div>
      <input tabindex="6" class="box-style" maxLength="20" name="NRODOC" size="20">
      </div>

      <!-- Email -->
      <div class="item">
      <div class="texto">E-Mail: </div>
      <input tabindex="8" class="box-style" maxLength="50" name="EMAILCLIENTE" size="50">
      </div>

      <!-- Numero de puerta -->
      <div class="item">
      <div class="texto">N&uacute;mero de Puerta: </div>
      <input tabindex="10" class="box-style" maxLength="20" name="NROPUERTA" size="20">
      <div class="textochico">(domicilio de entrega de resumen de tarjeta)</div>
      </div>

      

    </div>

  <table border = "0" width="100%" height="61" align="center">
  	<td height="57" align="center"><br>
  	<div class="default-button large-button red-gradient finish-button text-hover">
      <input class="button submit" TYPE="SUBMIT" VALUE="Aceptar" name="ok">  
      <span class="default-circle large-circle">
        <i class="icon-caret-right"></i>
      </span>
    </div>

    <div class="continue-shopping default-button large-button button-left-orientation hard-gray-gradient text-hover">
      <input class="button cancel" TYPE="RESET" VALUE="Cancelar">
      <span class="default-circle large-circle circle-left-orientation">
        <i class="icon-caret-left"></i>
      </span>
    </div>
  	
  	<br>
    <a TARGET="_blank" href="https://sps.decidir.com/sps_ar/sps_compra.html">
      <IMG class="image" src="/img/botonsps.gif" border="0">
    </a>

    
    


  </table>
<input type="hidden" value="<%= @order_total%>" name="ORDER_TOTAL">
<input type="hidden" value="<%= @order_quota%>" name="ORDER_QUOTA">
<input type="hidden" value="<%= @order_currency%>" name="ORDER_CURRENCY">
<input type="hidden" value="<%= @order_code%>" name="ORDER_CODE">
<% end %>
</BODY>
